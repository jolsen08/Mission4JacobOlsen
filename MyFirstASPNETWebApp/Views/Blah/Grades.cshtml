@{
    ViewData["Title"] = "Grade Calculator";
}

@model GradeModel;
<form  method="post">
    <label>Assignments</label>
    <input id="assignments" asp-for="Assignments"/> <br />
    <label>Quizzes</label>
    <input id="quizzes" asp-for="Quizzes"/><br />
    <label>Group Projects</label>
    <input id="groupprojects" asp-for="Projects"/><br />
    <label>INTEX</label>
    <input id="intex" asp-for="Intex"/><br />
    <label>Midterm Exam</label>
    <input id="midterm" asp-for="Midterm"/><br />
    <label>Final Exam</label>
    <input id="final" asp-for="Final"/><br /><br />
    <input id="buttonsend" type="submit" value="Submit" />
    <input id="restart" type="button" value="Restart" />

    <div asp-validation-summary="All"></div>
</form>
<br />

<h3>Overall Grade</h3>
<div id="result">?</div>

